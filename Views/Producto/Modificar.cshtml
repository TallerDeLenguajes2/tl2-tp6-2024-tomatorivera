@{
    ViewData["Title"] = "Modificación de producto";
}
@model Models.Producto

<section class="container">
    <h2 class="border-bottom my-3 w-50 mx-auto">Modificación de producto</h2>
    <form asp-controller="Producto" asp-action="ModificarProducto" method="post" class="w-50 mx-auto">
        <input type="hidden" asp-for="IdProducto">
        <section class="form-group mb-3">
            <label for="descripcion">Descripción</label>
            <div class="input-group">
                <span class="input-group-text" id="descripcion-addon">#</span>
                <input asp-for="Descripcion" class="form-control" aria-describedby="descripcion-addon" value="@Model.Descripcion" required>
            </div>
        </section>
        <section class="form-group">
            <label for="precio">Precio</label>
            <div class="input-group">
                <span class="input-group-text" id="precio-addon">$</span>
                <input asp-for="Precio" class="form-control" aria-describedby="precio-addon" value="@Model.Precio" required>
            </div>
        </section>
        <section class="d-flex justify-content-center align-items-center gap-2 my-3">
            <input type="submit" value="Modificar producto" class="btn btn-primary">
            <input type="reset" value="Borrar formulario" class="btn btn-outline-primary">
        </section>
    </form>
</section>