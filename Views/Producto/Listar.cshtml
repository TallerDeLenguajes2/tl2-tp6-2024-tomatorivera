@using Models
@Model List<Producto>()
    @{
        ViewData["Title"] = "Listar productos";
    }

    <section class="container">
        <h2 class="border-bottom">Listado de productos</h2>

        <article class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <th>ID</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                </thead>
                <tbody>
                    @foreach (Producto prod in Model)
                    {
                        <tr>
                            <td>@prod.IdProducto</td>
                            <td>@prod.Descripcion</td>
                            <td>@prod.Precio</td>
                        </tr>
                    }
                </tbody>
            </table>
        </article>
    </section>