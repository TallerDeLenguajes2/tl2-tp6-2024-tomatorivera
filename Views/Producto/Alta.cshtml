@{
    ViewData["Title"] = "Alta producto";
}
@model tl2_tp6_2024_tomatorivera.ViewModels.AltaProductoViewModel

<section class="container">
    <h2 class="border-bottom my-3 w-50 mx-auto">Alta de productos</h2>
    <form asp-controller="Producto" asp-action="AltaProducto" method="post" class="w-50 mx-auto">
        <section class="form-group mb-3">
            <label asp-for="Descripcion">Descripci√≥n</label>
            <div class="input-group">
                <span class="input-group-text" id="descripcion-addon">#</span>
                <input asp-for="Descripcion" class="form-control" aria-describedby="descripcion-addon">
            </div>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </section>
        <section class="form-group">
            <label asp-for="Precio">Precio</label>
            <div class="input-group">
                <span class="input-group-text" id="precio-addon">$</span>
                <input asp-for="Precio" class="form-control" aria-describedby="precio-addon">
            </div>
            <span asp-validation-for="Precio" class="text-danger"></span>
        </section>
        <section class="d-flex justify-content-center align-items-center gap-2 my-3">
            <input type="submit" value="Dar de alta" class="btn btn-primary">
            <input type="reset" value="Borrar formulario" class="btn btn-outline-secondary">
        </section>
    </form>
</section>