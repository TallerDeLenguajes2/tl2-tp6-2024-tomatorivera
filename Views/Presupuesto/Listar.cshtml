@{
    ViewData["Title"] = "Presupuestos";
}
@using Models
@model List<Presupuesto>

<h2 class="border-bottom my-4">@ViewData["Title"]</h2>
<article class="table-responsive">
    <section class="text-end mb-3">
        <a asp-controller="Presupuesto" asp-action="AltaPresupuesto" class="btn btn-success">+ Crear nuevo presupuesto</a>
    </section>
    
    <table class="table table-striped table-hover">
        <thead class="table-dark text-center">
            <th>Nombre destinatario</th>
            <th>Fecha de creaci√≥n</th>
            <th>Detalle</th>
            <th>Acciones</th>
        </thead>
        <tbody class="text-center">
            @foreach (Presupuesto presupuesto in Model) {
                <tr>
                    <td>@presupuesto.NombreDestinatario</td>
                    <td>@presupuesto.FechaCreacion</td>
                    <td>
                        <a asp-controller="Presupuesto" asp-action="VerDetalle" asp-route-id="@presupuesto.Id" class="btn btn-primary">Ver detalle</a>
                        <a asp-controller="Presupuesto" asp-action="AgregarProductoDetalle" asp-route-id="@presupuesto.Id" class="btn btn-info">Agregar productos</a>
                    </td>
                    <td>
                        <a asp-controller="Presupuesto" asp-action="ModificarPresupuesto" asp-route-id="@presupuesto.Id" class="btn btn-warning">Modificar</a>
                        <a asp-controller="Presupuesto" asp-action="EliminarPresupuesto" asp-route-id="@presupuesto.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</article>